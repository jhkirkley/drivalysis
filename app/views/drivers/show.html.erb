<div class="page-header">
  <%= link_to drivers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_driver_path(@driver), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1 class="text-center">Show driver</h1>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <dl class="dl-horizontal">
      <dt>Name:</dt>
      <dd><%= @driver.name %></dd>

      <dt>Email:</dt>
      <dd><%= @driver.user.email %></dd>

      <dt>Phone:</dt>
      <dd><%= @driver.phone %></dd>

      <dt>Address:</dt>
      <dd><%= @driver.address %></dd>

      <dt>Neighborhood :</dt>
      <dd><%= @driver.neighborhood %></dd>

      <dt>Available Monday:</dt>
      <dd><%= @driver.available_monday ? 'yes' : 'no' %></dd>

      <dt>Available time:</dt>
      <dd><%= @driver.available_time_monday.strftime("%I:%M%p") %></dd>

      <dt>Available Tueday:</dt>
      <dd><%= @driver.available_tuesday ? 'yes' : 'no' %></dd>

      <dt>Available time:</dt>
      <dd><%= @driver.available_time_tuesday.strftime("%I:%M%p") %></dd>

      <dt>Available Wednesday:</dt>
      <dd><%= @driver.available_wednesday ? 'yes' : 'no' %></dd>

      <dt>Available time:</dt>
      <dd><%= @driver.available_time_wednesday.strftime("%I:%M%p") %></dd>

      <dt>Available Thursday:</dt>
      <dd><%= @driver.available_thursday ? 'yes' : 'no' %></dd>

      <dt>Available time:</dt>
      <dd><%= @driver.available_time_thursday.strftime("%I:%M%p") %></dd>

      <dt>Available Friday:</dt>
      <dd><%= @driver.available_friday ? 'yes' : 'no' %></dd>

      <dt>Available time:</dt>
      <dd><%= @driver.available_time_friday.strftime("%I:%M%p") %></dd>

      <dt>Available Saturday:</dt>
      <dd><%= @driver.available_saturday ? 'yes' : 'no' %></dd>

      <dt>Available time:</dt>
      <dd><%= @driver.available_time_sauterday.strftime("%I:%M%p") %></dd>

      <dt>Available Sunday:</dt>
      <dd><%= @driver.available_sunday ? 'yes' : 'no' %></dd>

      <dt>Available time:</dt>
      <dd><%= @driver.available_time_sunday.strftime("%I:%M%p") %></dd>

      <dt>Wheel chair accessible:</dt>
      <dd><%= @driver.wheel_chair_accessible  ? 'yes' : 'no' %></dd>

      <dt>Willing to carpool:</dt>
      <dd><%= @driver.willing_to_carpool ? 'yes' : 'no' %></dd>

      <dt>Assistance comfort level:</dt>
      <dd><%= @driver.assistance_comfort_level %></dd>

    </dl>
  </div>
</div>
